<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- Thread Runner Config Provider , loads the default file with settings-->
    <bean id="ThreadRunnerConfigProvider" class="com.noreasonexception.datanuke.app.dataProvider.FileDataProvider" c:_0-ref="ThreadRunnerConfigProviderPath"/> >

    <!-- Thread Runner Source Provider , loads the default file with the classes set .
    Default location , [pwd]/conf/threadRunnerSources.json-->
    <bean id="ThreadRunnerSourceProvider" class="com.noreasonexception.datanuke.app.dataProvider.FileDataProvider" c:_0-ref="ThreadRunnerSourceProviderPath"/> >

    <!-- Thread Runner Source Provider , loads the default file with the classes set .
    Default location , [pwd]/conf/threadRunnerSources.json-->
    <bean id="ThreadRunnerFactoryConfigProvider" class="com.noreasonexception.datanuke.app.dataProvider.FileDataProvider" c:_0="ThreadRunnerFactoryConfigProviderPath"/> >
</beans>